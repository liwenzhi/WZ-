<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <fragment
            android:name="com.liwenzhi.aib.ui.fragment.NormalTitleBarFragment"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/fragment_titleBar"
            />

    <android.support.v4.view.ViewPager
            android:id="@+id/vp_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
    <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/tv_gray_deep"
            />
    <com.liwenzhi.aib.widget.bottomnavigation.BottomNavigationBar
            android:id="@+id/bottom_navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_normal"
            />


</LinearLayout>