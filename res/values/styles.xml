<resources>
    <style name="BaseStyle" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SwipeBackStyle" parent="@style/BaseStyle">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--加载对话窗-->
    <style name="BaseDialog" parent="@android:style/Theme.Dialog"/>
    <style name="Theme.Light.LoadingDialog" parent="@style/BaseDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <!--自定义View-material的样式-->
    <style name="TextAppearance.MaterialCalendarWidget.Header"
           parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.Date"
           parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/mcv_text_date_light</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.WeekDay"
           parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <!--Item字体的基本样式-->
    <style name="BaseItemTextStyle">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#fff</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>


    <!--显示很多病人数据页面的按钮样式-->
    <style name="DiagnosisButtonStyle">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_blood_signature_selector</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <!--floaging ActionButton-->
    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--可以回退页面-->
    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>


    <!--<item name="android:windowTranslucentNavigation">true</item>
    <item name="android:windowTranslucentStatus">true</item>-->

    <!--***************      bottomnavigation                        ****************-->
    <!--  <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>-->
    <style name="BadgeText">
        <item name="android:textSize">@dimen/badge_text_size</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">@dimen/badge_top_margin</item>
        <item name="android:paddingRight">@dimen/badge_width_padding</item>
        <item name="android:paddingLeft">@dimen/badge_width_padding</item>
        <item name="android:paddingBottom">@dimen/badge_height_padding</item>
        <item name="android:paddingTop">@dimen/badge_height_padding</item>
        <item name="android:visibility">gone</item>
    </style>

    <!--searchView-->
    <style name="MSV_ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingLeft">@dimen/search_icon_padding</item>
        <item name="android:paddingRight">@dimen/search_icon_padding</item>
    </style>


    <!-- 诊断界面患者信息列表ItemStyle(固定不变的TextView) -->
    <style name="human_info_final_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/blue_main</item>
    </style>


    <!-- 诊断界面患者信息列表ItemStyle(固定不变的ImageView) -->
    <style name="human_info_final_image_style">
        <item name="android:layout_width">@dimen/image_height</item>
        <item name="android:layout_height">@dimen/image_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- 诊断界面患者信息列表ItemStyle(会改变的TextView) -->
    <style name="human_info_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--很多病人病历页面的筛选条件文本-->
    <style name="patient_condition_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">2dp</item>
    </style>

    <!--top right menu-->
    <style name="TRM_ANIM_STYLE">
        <item name="android:windowEnterAnimation">@anim/trm_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/trm_popup_exit</item>
    </style>
</resources>

